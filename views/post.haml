.postzoom
  %h2{:class => "title"}=post.title
  %p{:class => "meta"}
    %small=friendly_time(post.created_at)
  %p{:class => "meta"}
    %small=post.linked_tags
  .entry
    =post.body_html
  -if admin?
    .edit
      %a{:href => post.url}="edit"

- if Blog.disqus_shortname
  #disqus_thread
  :erb
    <script type="text/javascript" src="http://disqus.com/forums/<%= Blog.disqus_shortname %>/embed.js"></script><noscript><a href="http://<%= Blog.disqus_shortname %>.disqus.com/?url=ref">View the discussion thread.</a></noscript><a href="http://disqus.com" class="dsq-brlink">blog comments powered by <span class="logo-disqus">Disqus</span></a>