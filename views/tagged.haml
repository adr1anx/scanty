%h1="Posts tagged #{tag}"
- posts.each do |post|
  .post
    %h2{:class => "title"}
      %a{:href => post.url}=post.title
    %p{:class => "meta"}
      %small=friendly_time(post[:created_at])
    %p{:class => "meta"}
      %small
        =post.linked_tags
        - if Blog.disqus_shortname
          |
          %a{:href => "#{post.url}#{disqus_thread}"}="comments"
    .entry
      =post.summary_html
      -if post.more?
        %a{:href => post.url}="Continue reading &raquo;"
